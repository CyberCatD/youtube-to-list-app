# YouTube to List App - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google Gemini API Key (required)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# YouTube Data API Key (required)
# Get your key at: https://console.cloud.google.com/apis/credentials
# Enable the YouTube Data API v3 in your Google Cloud Console
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Database URL (defaults to SQLite for development)
# For production, use PostgreSQL: postgresql://user:password@host:port/dbname
DATABASE_URL=sqlite:///./youtube_cards.db

# Comma-separated list of valid API keys for securing endpoints (optional)
# Leave empty to disable API key authentication
API_KEYS=

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:5173

# LLM Configuration
LLM_MODEL_NAME=gemini-2.5-flash
LLM_MAX_RETRIES=3
LLM_TIMEOUT=60

# Cache Configuration (in seconds)
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment (development, production, testing)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Default language for recipe extraction
DEFAULT_RECIPE_LANGUAGE=English

# USDA Food Database API Key (optional)
# Get your key at: https://fdc.nal.usda.gov/api-key-signup.html
# Uses DEMO_KEY by default (rate-limited)
USDA_API_KEY=DEMO_KEY
